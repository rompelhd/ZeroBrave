{
  // ===== AI FEATURES (all disabled, fuck AI) =====
  "BraveAIChatEnabled": false, // Disable Leo AI assistant
  "HelpMeWriteSettings": 2, // 2=Disabled - AI writing helper
  "GeminiSettings": 1, // 1=Never allow Google Gemini
  "GenAiDefaultSettings": 2, // 2=Never allow generative AI
  "GenAiLensOverlaySettings": 2, // 2=Disabled - Lens overlay AI
  "GenAILocalFoundationalModelSettings": 1, // 1=Never allow local AI models
  "LensRegionSearchEnabled": false, // Disable Google Lens region search
  "LensDesktopNTPSearchEnabled": false, // Disable Lens on new tab page
  "LensOverlaySettings": 1, // 1=Never allow Lens overlay
  // ===== PRIVACY =====
  "BlockThirdPartyCookies": true, // Block all third-party cookies
  "PrivacySandboxFingerprintingProtectionEnabled": true, // Enable fingerprinting protection
  "PrivacySandboxPromptEnabled": false, // Disable Privacy Sandbox prompt
  "PrivacySandboxAdTopicsEnabled": false, // Disable Topics API for ads
  "PrivacySandboxSiteEnabledAdsEnabled": false, // Disable site-suggested ads
  "PrivacySandboxAdMeasurementEnabled": false, // Disable ad measurement/attribution
  "WebRtcIPHandling": "disable_non_proxied_udp", // Prevent WebRTC IP leaks
  "WebRtcEventLogCollectionAllowed": false, // Disable WebRTC event logging
  "DnsOverHttpsMode": "off", // Disable built-in DoH (set to "automatic" if you don't have a custom DNS server)
  // ===== SECURITY =====
  "SafeBrowsingProtectionLevel": 2, // 2=Enhanced protection (1=Standard, 0=Disabled)
  "SafeBrowsingExtendedReportingEnabled": false, // Don't send browsing data to Google
  "SafeBrowsingSurveysEnabled": false, // Disable Safe Browsing surveys
  // ===== TELEMETRY (all disabled, fuck trackers) =====
  "MetricsReportingEnabled": false, // Disable usage statistics
  "DeviceMetricsReportingEnabled": false, // Disable device metrics
  "UrlKeyedAnonymizedDataCollectionEnabled": false, // Disable URL-keyed data collection
  "UrlKeyedMetricsAllowed": false, // Disable URL-keyed metrics
  "CloudProfileReportingEnabled": false, // Disable cloud profile reporting
  "CloudReportingEnabled": false, // Disable cloud reporting
  "ReportExtensionsAndPluginsData": false, // Don't report extensions info
  "ReportMachineIDData": false, // Don't report machine ID
  "ReportPolicyData": false, // Don't report policy data
  "ReportUserIDData": false, // Don't report user ID
  "ReportVersionData": false, // Don't report browser version
  "UserFeedbackAllowed": false, // Disable user feedback
  "FeedbackSurveysEnabled": false, // Disable feedback surveys
  // ===== DATA RETENTION =====
  "UserDataSnapshotRetentionLimit": 0, // 0=No data snapshots retained
  // ===== PAYMENTS & AUTOFILL =====
  "PaymentMethodQueryEnabled": false, // Disable payment method detection
  "AutofillPredictionSettings": 2, // 2=Never predict autofill
  "AutofillAddressEnabled": false, // Disable address autofill
  "AutofillCreditCardEnabled": false, // Disable credit card autofill
  "PasswordManagerEnabled": false, // Disable built-in password manager
  "PasswordLeakDetectionEnabled": false, // Disable password leak detection
  "PasswordSharingEnabled": false, // Disable password sharing
  // ===== SYNC & ACCOUNT =====
  "SyncDisabled": true, // Disable Brave Sync
  "BrowserSignin": 0, // 0=Disabled - No browser sign-in
  // ===== MEDIA & RECOMMENDATIONS =====
  "MediaRecommendationsEnabled": false, // Disable media recommendations
  "PromotionalTabsEnabled": false, // Disable promotional tabs
  "PromotionsEnabled": false, // Disable all promotions
  // ===== NETWORK =====
  "QuicAllowed": true, // Enable QUIC/HTTP3 (better privacy & performance)
  "NetworkPredictionOptions": 2, // 2=Never preload/predict network
  "SearchSuggestEnabled": false, // Disable search suggestions
  // ===== TOOLS =====
  "SpellcheckEnabled": false, // Disable spellcheck
  "SpellCheckServiceEnabled": false, // Disable online spellcheck service
  "TranslateEnabled": false, // Disable translation
  "EnableMediaRouter": false, // Disable Cast/media router
  "ShoppingListEnabled": false, // Disable shopping list feature
  // ===== SYSTEM =====
  "BackgroundModeEnabled": false, // Don't run in background
  "ComponentUpdatesEnabled": true, // Keep enabled for security updates
  "SuppressUnsupportedOSWarning": true, // Hide unsupported OS warning
  // ===== BRAVE SPECIFIC =====
  "BraveRewardsDisabled": true, // Disable Brave Rewards/BAT
  "BraveWalletDisabled": true, // Disable Brave Wallet
  "BraveVPNDisabled": 1, // 1=Disable Brave VPN
  "TorDisabled": true, // Disable Tor (set false if you want Tor)
  // ===== PERFORMANCE =====
  "DiskCacheSize": 104857600, // 100MB cache size (balanced)
  "MemorySaverModeSavings": 1, // 1=Aggressive memory savings
  // ===== PERMISSIONS (all blocked by default) =====
  "DefaultCookiesSetting": 4, // 4=Block third-party cookies
  "CookiesSessionOnlyForUrls": [
    "*"
  ], // Clear cookies on session end for all sites
  "DefaultJavaScriptSetting": 1, // 1=Allow JavaScript
  "DefaultGeolocationSetting": 2, // 2=Block geolocation
  "DefaultNotificationsSetting": 2, // 2=Block notifications
  "DefaultWebBluetoothGuardSetting": 2, // 2=Block Bluetooth access
  "DefaultWebUsbGuardSetting": 2, // 2=Block USB access
  "DefaultFileSystemReadGuardSetting": 2, // 2=Block file system read
  "DefaultFileSystemWriteGuardSetting": 2, // 2=Block file system write
  "DefaultLocalFontsSetting": 2, // 2=Block local fonts access
  "DefaultSensorsSetting": 2, // 2=Block sensors access
  "DefaultSerialGuardSetting": 2, // 2=Block serial port access
  // ===== CERTIFICATES =====
  // CertificateTransparency kept enabled for security and to prevent man-in-the-middle attacks
  // ===== SEARCH =====
  "DefaultSearchProviderEnabled": false, // Disable default search provider
  // ===== AUTOPLAY =====
  "AutoplayAllowed": false // Block media autoplay
}